<UserControl x:Class="ShogiClock.UserControls.ClockUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShogiClock.UserControls"
             xmlns:localVM="clr-namespace:ShogiClock.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <Grid Height="418" VerticalAlignment="Top">
        <Label x:Name="firstPlayerLabel" Content="{Binding FirstPlayerText}" HorizontalAlignment="Right" Margin="0,10,583,308" Width="100" Background="#7F964545" MinHeight="100"/>
        <Label x:Name="secondPlayerLabel" Content="{Binding SecondPlayerText}" HorizontalAlignment="Left" Margin="500,0,0,308" Width="100" Background="#FF52B162" MinHeight="100" Height="100" VerticalAlignment="Bottom"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="325,185,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>

    <!-- ビュー モデルと紐づけます -->
    <UserControl.DataContext>
        <localVM:ClockViewModel/>
    </UserControl.DataContext>
</UserControl>
